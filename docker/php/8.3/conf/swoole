server {
    listen 80;
    server_name localhost;  # Thay bằng tên miền của bạn hoặc địa chỉ IP

    # Chuyển hướng HTTP sang HTTPS (nếu dùng HTTPS)
    listen 443 ssl;
    ssl_certificate /var/www/html/vietiso/localhost.pem;
    ssl_certificate_key /var/www/html/vietiso/localhost-key.pem;

    location / {
        proxy_pass http://localhost:9501;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
